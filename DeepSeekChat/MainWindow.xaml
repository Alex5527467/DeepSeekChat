<Window x:Class="DeepSeekChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:converters="clr-namespace:DeepSeekChat.Converters"
        xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
        xmlns:viewmodels="clr-namespace:DeepSeekChat.ViewModels"
        mc:Ignorable="d"
        Title="DeepSeek Chat" Height="600" Width="800" 
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="White">

    <Window.Resources>
        <!-- 定义转换器 -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:ExpandCollapseHintConverter x:Key="ExpandCollapseHintConverter" />
        <converters:ExpandCollapseToolTipConverter x:Key="ExpandCollapseToolTipConverter" />
        <converters:IntToMarginConverter x:Key="IntToMarginConverter"/>

        <converters:DebugConverter x:Key="DebugConverter"/>

        <!-- 颜色资源 -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#BB86FC"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#03DAC6"/>
        <SolidColorBrush x:Key="DarkBackground" Color="#121212"/>
        <SolidColorBrush x:Key="CardBackground" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="BorderColor" Color="#404040"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#AAAAAA"/>
        <SolidColorBrush x:Key="HoverColor" Color="#3D3D3D"/>
        <SolidColorBrush x:Key="TreeViewBackground" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="SelectedItemBackground" Color="#3D3D3D"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#4D00A4FF"/>
        <SolidColorBrush x:Key="CardHoverBackground" Color="#3A3A3A"/>

        <!-- 右键菜单样式 -->
        <Style x:Key="ContextMenuStyle" TargetType="ContextMenu">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="TextBlock.Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="HasDropShadow" Value="True"/>
        </Style>

        <Style x:Key="DarkMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 左侧图标区域 -->
                                <Border x:Name="IconBorder"
                                Grid.Column="0"
                                Background="black"
                                Width="32"
                                Height="32">
                                    <ContentPresenter x:Name="Icon"
                                              Content="{TemplateBinding Icon}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>

                                <!-- 右侧文本区域 -->
                                <ContentPresenter x:Name="HeaderPresenter"
                                          Grid.Column="1"
                                          Content="{TemplateBinding Header}"
                                          Margin="8,0,16,0"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource HoverColor}"/>
                                <!-- 鼠标悬停时左侧图标区域也要变色 -->
                                <Setter TargetName="IconBorder" Property="Background" Value="{StaticResource HoverColor}"/>
                            </Trigger>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource HoverColor}"/>
                                <Setter TargetName="IconBorder" Property="Background" Value="{StaticResource HoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Separator 样式 -->
        <Style x:Key="MenuSeparatorStyle" TargetType="Separator">
            <Setter Property="Background" Value="{StaticResource BorderColor}"/>
            <Setter Property="Margin" Value="8,2"/>
            <Setter Property="Height" Value="1"/>
        </Style>


        <!-- 树状视图数据模板 -->
        <HierarchicalDataTemplate x:Key="FolderTemplate" 
                                  ItemsSource="{Binding Children}"
                                  DataType="{x:Type viewmodels:FileSystemItem}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Name}" 
                           Margin="4,0"/>
            </StackPanel>
        </HierarchicalDataTemplate>

        <DataTemplate x:Key="FileTemplate" DataType="{x:Type viewmodels:FileSystemItem}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Name}" 
                           Margin="4,0"
                           Cursor="Hand">
                    <TextBlock.InputBindings>
                        <MouseBinding MouseAction="LeftClick" 
                                      Command="{Binding DataContext.FileClickedCommand, 
                                              RelativeSource={RelativeSource AncestorType=Window}}"
                                      CommandParameter="{Binding}"/>
                    </TextBlock.InputBindings>
                </TextBlock>
            </StackPanel>
        </DataTemplate>

        <!-- 数据模板选择器 -->
        <viewmodels:FileSystemTemplateSelector x:Key="FileSystemTemplateSelector"
                                          FolderTemplate="{StaticResource FolderTemplate}"
                                          FileTemplate="{StaticResource FileTemplate}"/>


        <Style x:Key="TreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2,4"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>

            <!-- 使用绑定设置层级缩进 -->
            <Setter Property="Margin" Value="{Binding Indent, Converter={StaticResource IntToMarginConverter}, Mode=OneWay}"/>

            <EventSetter Event="Expanded" Handler="TreeViewItem_Expanded"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 内容区域 -->
                            <Border x:Name="Bd"
                                Grid.Column="0"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="true">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 图标 -->
                                    <TextBlock x:Name="IconTextBlock"
                                       Grid.Column="0"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="12"
                                       Width="16"
                                       Height="16"
                                       Margin="4,0,4,0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Text="{Binding Icon}"
                                       Foreground="{StaticResource TextSecondary}"/>

                                    <!-- 内容 -->
                                    <ContentPresenter x:Name="PART_Header"
                                              Grid.Column="1"
                                              ContentSource="Header"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- 子项容器 - 跨两列 -->
                            <ItemsPresenter x:Name="ItemsHost"
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="false">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                            </Trigger>

                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource SelectedItemBackground}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="IconTextBlock" Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource HoverColor}"/>
                            </Trigger>

                            <!-- 右键选中 --><!--
                            <EventTrigger RoutedEvent="PreviewMouseRightButtonDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsSelected">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>-->

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 按钮样式 -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverColor}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TitleBarIconButtonStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <!-- 普通按钮样式 -->
        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 文本输入框样式 -->
        <Style x:Key="DarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 可选：创建专门的进度条样式 -->
        <Style x:Key="DarkProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border Name="PART_Track"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3"/>
                            <Border Name="PART_Indicator"
                                    Background="{TemplateBinding Foreground}"
                                    CornerRadius="3"
                                    HorizontalAlignment="Left"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="MessageTemplate">
            <Border CornerRadius="8" 
            Background="{Binding BackgroundColor, FallbackValue={StaticResource CardBackground}}"
            Padding="12"
            Margin="0,8,0,0"
            HorizontalAlignment="{Binding HorizontalAlignment}"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1">
                <Grid Width="Auto" MaxWidth="600">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 发送者信息和操作按钮 -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 发送者和时间 -->
                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <TextBlock Text="{Binding Sender}" 
                               FontWeight="SemiBold"
                               Foreground="{Binding SenderColor, FallbackValue={StaticResource PrimaryBrush}}"/>
                            <TextBlock Text="{Binding Timestamp}" 
                               Margin="8,0,0,0"
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="12"/>
                        </StackPanel>

                        <!-- 操作按钮 -->
                        <StackPanel Orientation="Horizontal" Grid.Column="1">
                            <!-- 展开/折叠按钮 -->
                            <Button x:Name="ToggleBtn"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTip="{Binding IsExpanded, Converter={StaticResource ExpandCollapseToolTipConverter}}"
                            Command="{Binding DataContext.ToggleMessageCommand, 
                                    RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            Margin="4,0,0,0">
                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="&#xE70D;"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                                                    <Setter Property="Text" Value="&#xE70E;"/>
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Button>

                            <!-- 复制按钮 -->
                            <Button x:Name="CopyBtn"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTip="复制消息"
                            Command="{Binding DataContext.CopyMessageCommand, 
                                    RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            Tag="{Binding}"
                            Margin="4,0,0,0">
                                <TextBlock Text="&#xE8C8;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondary}"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- 消息内容（支持部分选择） -->
                    <Border Grid.Row="1" Margin="0,8,0,0">
                        <!-- 使用 TextBox 替代 TextBlock 以支持文本选择 -->
                        <TextBox Text="{Binding DisplayMessage,Mode=OneWay}"
                         FontSize="14"
                         TextWrapping="Wrap"
                         IsReadOnly="True"
                         BorderThickness="0"
                         Background="Transparent"
                         Foreground="{StaticResource TextPrimary}"
                         Cursor="IBeam"
                         VerticalAlignment="Top"
                         Padding="0"
                         Focusable="True"
                         IsTabStop="True"
                         CaretBrush="{StaticResource PrimaryBrush}"
                         SelectionBrush="{StaticResource PrimaryLightBrush}"
                         ContextMenu="{x:Null}">
                            <!-- 禁用右键菜单（可选） -->
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Background="{TemplateBinding Background}">
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                          VerticalAlignment="Top"
                                                          Padding="{TemplateBinding Padding}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource CardHoverBackground}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>

                    <!-- 展开/折叠提示 -->
                    <TextBlock Grid.Row="2" 
                       Margin="0,8,0,0"
                       HorizontalAlignment="Right"
                       Foreground="{StaticResource PrimaryBrush}"
                       FontSize="12"
                       Cursor="Hand">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} ({1} 字符)">
                                <Binding Path="IsExpanded" Converter="{StaticResource ExpandCollapseHintConverter}"/>
                                <Binding Path="Message.Length" Mode="OneWay"/>
                            </MultiBinding>
                        </TextBlock.Text>
                        <TextBlock.InputBindings>
                            <MouseBinding MouseAction="LeftClick"
                                  Command="{Binding DataContext.ToggleMessageCommand, 
                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                  CommandParameter="{Binding}"/>
                        </TextBlock.InputBindings>
                    </TextBlock>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="{StaticResource DarkBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧工程文件树状结构 -->
        <Border Grid.Column="0" 
                BorderThickness="0,0,1,0" 
                BorderBrush="{StaticResource BorderColor}"
                Background="{StaticResource TreeViewBackground}">
            <DockPanel>
                <!-- 标题栏 -->
                <Border DockPanel.Dock="Top" 
                        BorderThickness="0,0,0,1" 
                        BorderBrush="{StaticResource BorderColor}"
                        Background="#0D0D0D">
                    <Grid Margin="8,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="工程文件"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>

                    </Grid>
                </Border>

                <!-- 路径显示 -->
                <Border DockPanel.Dock="Top" 
                        BorderThickness="0,0,0,1" 
                        BorderBrush="{StaticResource BorderColor}"
                        Background="#1E1E1E"
                        Padding="8,4">
                    <TextBlock Text="{Binding ProjectPath}" 
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="11"
                               TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- 文件树状视图 -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Auto">
                    <TreeView x:Name="ProjectTreeView"
              ItemsSource="{Binding ProjectFiles}"
              ItemContainerStyle="{StaticResource TreeViewItemStyle}"
              ItemTemplateSelector="{StaticResource FileSystemTemplateSelector}"
              Background="Transparent"
              BorderThickness="0"
              Padding="4"
              ContextMenuOpening="TreeView_ContextMenuOpening">
                        <TreeView.ContextMenu>
                            <ContextMenu Background="{StaticResource CardBackground}"
                                         BorderBrush="{StaticResource BorderColor}"
                                         BorderThickness="1"
                                         Padding="0" x:Name="TreeViewContextMenu">

                                <MenuItem Header="打开文件" 
                  Command="{Binding Path=PlacementTarget.Tag.OpenFileCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                   CommandParameter="{Binding Path=PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                  Style="{StaticResource DarkMenuItemStyle}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="&#xE8A7;" 
                           FontFamily="Segoe MDL2 Assets" 
                           FontSize="12"
                           Foreground="{StaticResource PrimaryBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <!-- 复制文件路径 -->
                                <MenuItem Header="复制名称" 
                  Command="{Binding Path=PlacementTarget.Tag.CopyFilePathCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                   CommandParameter="{Binding Path=PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                  Style="{StaticResource DarkMenuItemStyle}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="&#xE8C8;" 
                           FontFamily="Segoe MDL2 Assets" 
                           FontSize="12"
                           Foreground="{StaticResource PrimaryBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <!-- 分隔线 -->
                                <Separator>
                                    <Separator.Style>
                                        <Style TargetType="Separator">
                                            <Setter Property="Background" Value="{StaticResource BorderColor}"/>
                                            <Setter Property="Margin" Value="8,2"/>
                                            <Setter Property="Height" Value="1"/>
                                        </Style>
                                    </Separator.Style>
                                </Separator>

                                <!-- 在文件夹中显示 -->
                                <MenuItem Header="在文件夹中显示" 
                  Command="{Binding Path=PlacementTarget.Tag.ShowInExplorerCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                  CommandParameter="{Binding Path=PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                  Style="{StaticResource DarkMenuItemStyle}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="&#xEC50;" 
                           FontFamily="Segoe MDL2 Assets" 
                           FontSize="12"
                           Foreground="{StaticResource PrimaryBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </TreeView.ContextMenu>
                        <TreeView.Resources>
                            <Style TargetType="TreeViewItem" BasedOn="{StaticResource TreeViewItemStyle}"/>
                        </TreeView.Resources>
                    </TreeView>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- 右侧主内容区域 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" Background="#0D0D0D" Height="40">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 标题居中 -->
                    <TextBlock Text="C#代码生成工具" 
                               Grid.Column="0"
                               Foreground="{StaticResource PrimaryBrush}" 
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontWeight="SemiBold"/>

                    <!-- 右上角设置按钮 -->
                    <Button Grid.Column="1"
                            Style="{StaticResource TitleBarIconButtonStyle}"
                            Command="{Binding OpenSettingsCommand}"
                            ToolTip="设置"
                            Margin="0,0,10,0">
                        <TextBlock Text="&#xE713;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="16"
                                   Foreground="{StaticResource TextSecondary}"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Agent控制栏 -->
            <!--<Border Grid.Row="1" Background="#1A1A1A" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderColor}">
                <StackPanel Orientation="Horizontal" Margin="10,8">
                    <TextBlock Text="Agent控制:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Foreground="{StaticResource TextSecondary}"/>
                    <Button Content="启动设计专家" 
                            Command="{Binding StartDesignAgentCommand}"
                            Margin="5,0"
                            Style="{StaticResource DarkButtonStyle}"
                            Background="#4CAF50">
                        <Button.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="启动编程专家" 
                            Command="{Binding StartCodingAgentCommand}"
                            Margin="5,0"
                            Style="{StaticResource DarkButtonStyle}"
                            Background="#2196F3">
                        <Button.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="启动任务分配者" 
                            Command="{Binding StartTaskCreateAgentCommand}"
                            Margin="5,0"
                            Style="{StaticResource DarkButtonStyle}"
                            Background="#FF9800">
                        <Button.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>-->

            <!-- 消息区域 -->
            <ScrollViewer Grid.Row="2" 
                          VerticalScrollBarVisibility="Auto" 
                          Name="messageScrollViewer"
                          Background="{StaticResource DarkBackground}">
                <ItemsControl x:Name="messagesContainer" 
                              ItemsSource="{Binding Messages}"
                              ItemTemplate="{StaticResource MessageTemplate}"
                              Background="Transparent">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Margin="10"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>

            <!-- 输入区域 -->
            <Border Grid.Row="3" 
                    BorderThickness="0,1,0,0" 
                    BorderBrush="{StaticResource BorderColor}"
                    Background="#1A1A1A">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="txtInput" 
                             Grid.Column="0"
                             Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                             MinHeight="40"
                             VerticalContentAlignment="Center"
                             Padding="10,0"
                             FontSize="14"
                             Style="{StaticResource DarkTextBoxStyle}"
                             VerticalScrollBarVisibility="Auto"
                             AcceptsReturn="True"
                             TextWrapping="Wrap">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SendCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <Button Grid.Column="1" 
                            Content="发送" 
                            Command="{Binding SendCommand}"
                            VerticalAlignment="Bottom"
                            MinWidth="80"
                            MaxHeight="40"
                            MinHeight="40"
                            Margin="10,0"
                            Style="{StaticResource DarkButtonStyle}"
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="White"
                            BorderThickness="0" Cursor="Hand"/>

                    <Button Grid.Column="2" 
                            VerticalAlignment="Bottom"
                            Content="清空" 
                            Command="{Binding ClearCommand}"
                            MinWidth="60"
                            MaxHeight="40"
                            MinHeight="40"
                            Style="{StaticResource DarkButtonStyle}"
                            Background="#D32F2F"
                            Foreground="White"
                            BorderThickness="0"/>
                </Grid>
            </Border>

            <!-- 加载遮罩层 -->
            <Grid Grid.Row="0" Grid.RowSpan="4" 
                  Background="#CC000000" 
                  Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                  Panel.ZIndex="1000">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="200" 
                                 Height="6"
                                 Margin="0,0,0,10">
                        <ProgressBar.Background>
                            <SolidColorBrush Color="#2D2D2D"/>
                        </ProgressBar.Background>
                        <ProgressBar.Foreground>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Color="#BB86FC" Offset="0"/>
                                <GradientStop Color="#03DAC6" Offset="0.5"/>
                                <GradientStop Color="#BB86FC" Offset="1"/>
                            </LinearGradientBrush>
                        </ProgressBar.Foreground>
                    </ProgressBar>
                    <TextBlock Text="正在思考中..." 
                               Foreground="{StaticResource TextPrimary}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>